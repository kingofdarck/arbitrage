    },
    "TELEGRAM_CHAT_ID": {
      "description": "ID чата для уведомлений (получите через /getUpdates)",
      "required": true
    },
    "PYTHONUNBUFFERED": {
      "description": "Python unbuffered output",
      "value": "1"
    }
  },
  "addons": [],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}