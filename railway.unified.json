{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.unified"
  },
  "deploy": {
    "startCommand": "python unified_system.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "TRADING_MODE": "live",
        "DEBUG": "false",
        "MIN_PROFIT_THRESHOLD": "0.75",
        "MAX_POSITION_SIZE": "100.0",
        "TELEGRAM_ENABLED": "true",
        "BYBIT_ENABLED": "true",
        "BYBIT_SANDBOX": "false",
        "WEB_ENABLED": "true",
        "WEB_HOST": "0.0.0.0",
        "LOG_LEVEL": "INFO",
        "PYTHONUNBUFFERED": "1"
      }
    }
  }
}