{
  "name": "Triangular Arbitrage Bot",
  "description": "Автоматический треугольный арбитражный бот для Bybit",
  "repository": "https://github.com/your-username/arbitrage-bot",
  "logo": "https://cdn.jsdelivr.net/npm/cryptocurrency-icons@0.18.1/32/color/btc.png",
  "keywords": ["arbitrage", "crypto", "trading", "bybit", "triangular"],
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "env": {
    "BYBIT_API_KEY": {
      "description": "Ваш API ключ Bybit",
      "required": true
    },
    "BYBIT_API_SECRET": {
      "description": "Ваш Secret ключ Bybit",
      "required": true
    },
    "BYBIT_SANDBOX": {
      "description": "Использовать sandbox режим (true/false)",
      "value": "false",
      "required": false
    },
    "TRADING_MODE": {
      "description": "Режим торговли (test/live)",
      "value": "live",
      "required": false
    },
    "MIN_PROFIT_THRESHOLD": {
      "description": "Минимальная прибыль в процентах",
      "value": "0.5",
      "required": false
    },
    "MAX_POSITION_SIZE": {
      "description": "Максимальный размер позиции в USD",
      "value": "50.0",
      "required": false
    },
    "TELEGRAM_ENABLED": {
      "description": "Включить Telegram уведомления (true/false)",
      "value": "true",
      "required": false
    },
    "TELEGRAM_BOT_TOKEN": {
      "description": "Токен Telegram бота для уведомлений",
      "required": false
    },
    "TELEGRAM_CHAT_ID": {
      "description": "ID чата Telegram для уведомлений",
      "required": false
    }
  },
  "scripts": {
    "postdeploy": "python test_new_api_keys.py"
  },
  "addons": [
    {
      "plan": "papertrail:choklad",
      "as": "PAPERTRAIL"
    }
  ]
}